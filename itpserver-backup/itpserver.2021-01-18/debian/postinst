#!/bin/sh
# postinst script for itpserver
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)
	systemctl daemon-reload
	#systemctl restart itpserver
	systemctl enable itpserver
        # systemctl restart arsworker
        # systemctl enable arsworker
        systemctl restart restoreiptables.service
        systemctl enable restoreiptables.service
        if ! id itmadmin 2>&1 > /dev/null; then
            /usr/sbin/useradd -p `openssl passwd -1 firewall` -s /opt/skyguard/itpcli/cli_wrapper.sh itmadmin -m;
        fi

        cp -f /opt/skyguard/itpcli/00-itmadmin /etc/sudoers.d/
        cp -f /etc/systemd/system/getty.target.wants/getty\@tty1.service /etc/systemd/system/getty.target.wants/getty\@tty2.service
        cp -f /opt/skyguard/itpcli/getty\@tty1.service /etc/systemd/system/getty.target.wants/ 
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
